{
  "name": "react-ssr-app",
  "version": "0.1.0",
  "scripts": {
    "start": "run-p clean webpack start:api start:app",
    "start:app": "ts-node ./server",
    "webpack": "webpack",
    "prestart:api": "node tools/createMockDb.js",
    "start:api": "node tools/apiServer.js",
    "test": "jest --watchAll",
    "test:verify": "jest --coverage",
    "test:ci": "jest",
    "clean": "rimraf ./public && mkdir public",
    "prebuild": "run-p clean test:ci",
    "build": "webpack --config webpack.config.prod.ts",
    "postbuild": "run-p start:api start:app"
  },
  "dependencies": {
    "bootstrap": "^4.5.0",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "ignore-styles": "^5.0.1",
    "jest": "^26.0.1",
    "json-server": "^0.16.1",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "react-toastify": "^6.0.5",
    "redux-immutable-state-invariant": "^2.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/transform-runtime"
      ]
    ]
  }
}
